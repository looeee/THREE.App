{
  "name": "three-app",
  "version": "2.1.1",
  "description": "A simple loop driven three.js engine and asset management system",
  "main": "build/main.js",
  "scripts": {
    "build-js": "rollup -c --environment BUILD:production",
    "watch-js": "rollup -c -w --environment BUILD:development"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/looeee/npm-three-app.git"
  },
  "keywords": [
    "three.js",
    "threejs",
    "webgl",
    "3d",
    "webvr",
    "webxr",
    "discover three.js"
  ],
  "author": "Lewy Blue <lewy@discoverthreejs.com> (https://discoverthreejs.com)",
  "license": "MIT",
  "homepage": "https://discoverthreejs.com/",
  "bugs": {
    "url": "https://github.com/looeee/npm-three-app/issues"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "browsers": [
              "last 2 versions",
              "> 5%"
            ]
          },
          "useBuiltIns": "usage",
          "corejs": "3"
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-object-rest-spread"
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb",
      "prettier"
    ],
    "env": {
      "browser": true
    },
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ],
      "class-methods-use-this": 0,
      "import/extensions": 0,
      "import/prefer-default-export": 0,
      "no-console": 0,
      "no-plusplus": 0,
      "prefer-destructuring": 0,
      "no-restricted-syntax": [
        "error",
        "ForInStatement",
        "LabeledStatement",
        "WithStatement"
      ],
      "no-param-reassign": [
        "error",
        {
          "props": false
        }
      ]
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 70
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "concurrently": "^6.0.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^2.4.0",
    "prettier": "^1.19.1",
    "rollup": "^1.31.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0"
  },
  "dependencies": {
    "three": "^0.125.0"
  }
}
